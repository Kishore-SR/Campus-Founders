# ============================================
# Backend Environment Variables Template
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to Git

# ============================================
# REQUIRED - JWT Secret Key
# ============================================
# Generate a secure random string for signing JWT tokens
# Run: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Or: openssl rand -hex 64
# Minimum 32 characters recommended
JWT_SECRET_KEY=your-super-secret-jwt-key-minimum-32-characters-long

# ============================================
# REQUIRED - MongoDB Connection String
# ============================================
# Get this from MongoDB Atlas dashboard: https://cloud.mongodb.com/
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/campus-founders?retryWrites=true&w=majority

# ============================================
# REQUIRED - Stream API Credentials
# ============================================
# Get these from Stream Dashboard: https://dashboard.getstream.io/
# Go to App Access Keys  Copy Key and Secret
# Use the Key value (same as frontend VITE_STREAM_API_KEY)
STREAM_API_KEY=your-stream-api-key

# Use the Secret value (reveal and copy from dashboard)
# NEVER expose this in frontend code
STREAM_API_SECRET=your-stream-api-secret

# ============================================
# OPTIONAL - Server Configuration
# ============================================
# Server Port (Optional - defaults to 5001)
PORT=5001

# Node Environment (Optional - defaults to development)
# Options: development | production
NODE_ENV=development
